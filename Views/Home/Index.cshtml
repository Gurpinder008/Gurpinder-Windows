<style>
    /* Style for the image rows */
    .image-row {
        display: flex;
        justify-content: space-between;
        margin: 20px 0;
    }

    /* Style for individual image containers */
    .image {
        position: relative;
        width: 30%; /* Adjust as needed */
        height: 300px;
        text-align: center;
    }

        /* Style for the images */
        .image img {
            width: 100%;
            height: 300px;
            border: 3px solid #000; /* Border style and color */
            border-radius: 5%; /* Creates circular corners */
            display: block;
            transition: filter 0.3s, opacity 0.3s;
        }

    /* Style for the image text */
    .image-text {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: black;
        color: white;
        padding: 5px;
        
        text-align: center;
        opacity: 0;
        transition: opacity 0.3s;
    }

    /* Hover effect */
    

    .image:hover .image-text {
        opacity: 1;
    }

    .image-row:hover .image:not(:hover) img {
        filter: blur(5px);
        opacity: 0.7;
    }

</style>

