@model Gurpinder_Windows.Models.WindowStyleViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Windows" asp-action="Index" method="get">
    <p>
        <select asp-for="WindowStyle" asp-items="Model.Styles">
            <option value="">All</option>
        </select>

        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Windows[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Windows[0].Style)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Windows[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Windows[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Windows[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Windows[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Windows)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Style)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a href="/Windows/Edit/4"> Edit </a> |
                    <a href="/Windows/Details/4"> Details </a> |
                    <a href="/Windows/Delete/4"> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
